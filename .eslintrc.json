{
    "env": {
        "es2021": true,
        "node": true,
        "es6": true
    },
    "extends": [
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "no-useless-return": "off",
        "quotes": [
            "error", 
            "single", 
            { 
                "allowTemplateLiterals": true
            }
        ]
    },
    "globals": {
        "__dirname": true
    }
}
